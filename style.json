{
  "version": 8,
  "name": "Flux Dark",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "sprite": "https://openmaptiles.github.io/dark-matter-gl-style/sprite",
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#17191C"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["all", ["==", "$type", "Polygon"], ["!=", "brunnel", "tunnel"]],
      "paint": {
        "fill-color": "#1A3350"
      }
    },
    {
      "id": "landuse_park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["all", ["==", "$type", "Polygon"], ["==", "class", "park"]],
      "paint": {
        "fill-color": "#1A3520"
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "filter": ["==", "$type", "LineString"],
      "paint": {
        "line-color": "#1A3350"
      }
    },
    {
      "id": "highway_major",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 8,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "primary", "secondary", "tertiary", "trunk", "motorway"]],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#2A2D33",
        "line-width": {"stops": [[8, 0.3], [12, 1], [16, 3]]}
      }
    },
    {
      "id": "highway_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 13,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "minor", "service"]],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#232629",
        "line-width": {"stops": [[13, 0.3], [16, 1.5]]}
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 14,
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "#22252A",
        "fill-outline-color": "#2A2D33"
      }
    },
    {
      "id": "street_names",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "minzoom": 14,
      "layout": {
        "symbol-placement": "line",
        "symbol-spacing": 300,
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": {"stops": [[14, 9], [16, 11]]},
        "text-max-angle": 30
      },
      "paint": {
        "text-color": "#7A736A",
        "text-halo-color": "#17191C",
        "text-halo-width": 2
      }
    },
    {
      "id": "place_suburb",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "minzoom": 9,
      "maxzoom": 15,
      "filter": ["all", ["==", "$type", "Point"], ["==", "class", "suburb"]],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": {"stops": [[9, 12], [13, 18]]},
        "text-transform": "uppercase",
        "text-letter-spacing": 0.2
      },
      "paint": {
        "text-color": "#B0A89F",
        "text-halo-color": "#17191C",
        "text-halo-width": 2
      }
    },
    {
      "id": "place_neighbourhood",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "minzoom": 12,
      "maxzoom": 16,
      "filter": ["all", ["==", "$type", "Point"], ["==", "class", "neighbourhood"]],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": {"stops": [[12, 10], [14, 14]]},
        "text-transform": "uppercase",
        "text-letter-spacing": 0.15
      },
      "paint": {
        "text-color": "#B0A89F",
        "text-halo-color": "#17191C",
        "text-halo-width": 2
      }
    }
  ],
  "id": "flux-dark"
}
